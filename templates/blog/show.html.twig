{% extends "base.html.twig" %}
{# on hérite du template de base.html.twig #}

{# ci dessous le contenu du block body sera insérer dans le body de base.html.twig #}

{% block body %}

    <h1 class="display-4 text-center my-4">Détails de l'article</h1>

            <div class="col-md-12 border border-secondary rounded mr-1 mb-5 text-center">
                <img src="{{article.image|replace({"250":"1000/300"}) }}" alt=""><hr>
                <h2>{{ article.title }}</h2>
                <p>{{ article.content|raw }}</p><hr>
                <p class="text-right">Posté le {{ article.createdAt|date('d/m/Y')}} à {{ article.createdAt|date('H:i:s')}}</p>
                <p><strong>{{ article.category.title }}</strong></p>  
                
            </div>
            <a href="{{ path('blog')}}" class="btn btn-primary mb-3">Retour aux article</a>

            <h2 class="text-center">Commentaires</h2>

    <div class="col-md-12">

            {% for comment in article.comments %}
            
                <div class="row border rounded mb-2">
                    <div class="col-md-4">
                        <span>{{ comment.author }}</span>
                        <small class="font-italic">( {{ comment.createdAt|date('d/m/Y à H:i:s') }})</small>
                    </div>
                    <div class="col-md-8">
                        <p>{{ comment.content|raw }}</p>
                    </div>
                </div>

            {% endblock %}
    </div>
