{% extends "base.html.twig" %}

{% block body %}

  <div class="col-md-8 order-md-1 mx-auto my-4 ">
          <h4 class="mb-3">Nouvel article</h4>
          <form class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName">Titre</label>
                <input type="text" class="form-control" id="firstName" >
                <div class="invalid-feedback">
                 
                </div>
              </div>
              <div class="form-group">
                <label for="lastName">Contenu</label>
                <textarea rows="10" id="content" name="content" class="form-control"></textarea>

                </div>
              </div>
            </div>

            <div class="form-group">
                <label for="image">Image</label>
                <input type="files" class="form-control" id="image">
            </div>

            
      </div>

{% endblock %}